            <table class="font-size item-table" width="100%" >
                <tr>
                    <th align="left">QTY</th>
                    <th align="left">UOM</th>
                    <th align="left">ITEM DESCRIPTION</th>
                    <th align="left" style="width:20px;">UNIT PRICE</th>
                    <th align="left" style="width:20px;">TOTAL</th>
                </tr> <!--Babaguhin-->
                @foreach (var item in Model.RequisitionItems)
