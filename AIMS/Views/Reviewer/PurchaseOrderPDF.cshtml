                    if (item.isItemSelected == true)
                    {
                        <tr class="font-size">
						
                            <td align = "left" > @item.Quantity</td>
                            <td align="left" >@item.UnitOfMeasurement</td>
                            <td align="left" >@item.ItemName</td>
                            @{
                                if (counter == 0)
                                {
                                    <td align="left" >P @item.RoundedUnitPrice </td>
                                    <td align="left" >P @item.LineTotal</td>
                                }
                                else
                                {
                                    <td align="left" >@item.RoundedUnitPrice</td><!--Replaced alignment-->
                                    <td align="left" >@item.LineTotal</td><!--Replaced alignment-->
                                }
                                counter++;
                            }
                        </tr>
                                    }
                                    total += Double.Parse(item.LineTotal);
                                }
            </table>
            </div>
